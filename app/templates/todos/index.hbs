<div class="container">
    <div class="row">
        <div class="col-md-3">
          <h2>Added Job List</h2>
        </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <p>
          {{link-to "Add New Job" "todos.new" }}
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">&nbsp;</div>
      <div class="col-md-8 table-responsive">
        {{#if model.length}}
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Job Title
                  </th>
                  <th>
                    Job Description
                  </th>
                  <th>
                    Done
                  </th>
                  <th colspan="3">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each model as |todo|}}
                  <tr>
                    <td>
                      {{todo.label}}
                    </td>
                    <td>
                      {{todo.text}}
                    </td>
                    <td>
                      {{todo.done}}
                    </td>
                    <td>
                      {{link-to "Edit" "todos.edit" todo}}
                    </td>
                    <td>
                      {{link-to "Show" "todos.show" todo}}
                    </td>
                    <td>
                      <a href="#" {{action "remove" todo}}>Remove</a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <p id="blankslate">
              No Jobs found
            </p>
          {{/if}}
      </div>
      <div class="col-md-2"></div>
    </div>
</div>





