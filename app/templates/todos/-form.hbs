<form class="form-horizontal" {{action "save" on="submit"}}>
  <div class="form-group">
    <label class="col-lg-3 control-label">Job Title</label>
    <div class="col-lg-8">{{input type="text" value=model.label}}</div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Job Details</label>
    <div class="col-lg-8">{{input type="text" value=model.text}}</div>
  </div>

  <div class="form-group">
    <label class="col-lg-3 control-label">Done</label>
    <div class="col-lg-8">{{input type="checkbox" checked=model.done}}</div>
  </div>
  <div class="form-group">
     <label class="col-lg-3 control-label">Done</label>
     <input type="submit" value="Save">
  </div>
</form>


